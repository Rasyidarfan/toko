<!-- |||||||||||||||||||||||||||script|||||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->
<script>
var item=[[barang="barang",harga=0,jumlah=0]];
var jumlah =0;

  const check = document.getElementById('chk');
  const shipping = document.querySelector('div.penerima');
  const checkout =document.querySelector('.keranjang .container');


  check.addEventListener('click',function(){
    if(check.checked){
      shipping.style.display="none";
    }else{
      shipping.style.display="block";
    }
  });

const tambah =document.querySelectorAll('div.card p button');


function masuk(){
  document.querySelector('div.item').style.display="none";
  setTimeout(function(){
    document.querySelector('div.item').style.display="block";
  },500);
}

tambah.forEach(function(el){
  el.addEventListener('click',function(e){

masuk();

    let keranjang =["barang",0,0];
    let b=false;
    keranjang[0]=e.target.parentElement.parentElement.getElementsByTagName('h1')[0].innerText;
    keranjang[1]=e.target.parentElement.parentElement.querySelector('p.price').innerText;
    keranjang[2]+=1;
    keranjang[1]=parseInt(keranjang[1].slice(3));

   for (var i = 0; i < item.length; i++) {
    if(item[i][0]==keranjang[0]){
      b=true;
      item[i][2]+=1;
      e.target.innerText=e.target.innerText.slice(0,11);
      e.target.innerText+=" ("+item[i][2]+")";
    };
   }

    if(!b){
      item.push(keranjang);
      e.target.innerText+=" ("+1+")";
    };
    jumlah=0;
    for (var i = 0; i < item.length; i++) {
      jumlah+= item[i][1]*item[i][2];
    }

ckot();
  });
});

function ckot(){
  checkout.querySelector('.price b').innerText=item.length-1;
  checkout.querySelector('p span.price b').innerText="Rp "+jumlah;
};
 
 ckot();
</script>
